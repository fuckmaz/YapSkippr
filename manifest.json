{
  "name": "YapSkippr",
  "description": "In-Video Sponsorship- and Ad-Skipper",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "32": "icons/arrow_32.png",
    "48": "icons/arrow_64.png",
    "128": "icons/arrow_512.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/arrow_32.png",
      "48": "icons/arrow_64.png",
      "128": "icons/arrow_512.png"
    }
  },
  "permissions": ["scripting", "activeTab"]
}