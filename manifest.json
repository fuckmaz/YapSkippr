{
  "name": "YapSkippr",
  "description": "In-Video Sponsorship- and Ad-Skipper",
  "version": "1.0",
  "manifest_version": 3,
  "homepage_url": "https://github.com/fuckmaz/YapSkippr",
  "host_permissions": [
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://youtu.be/*"
  ],
  "icons": {
    "16": "icons/arrow_16.png",
    "32": "icons/arrow_32.png",
    "48": "icons/arrow_64.png",
    "128": "icons/arrow_128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/arrow_16.png",
      "32": "icons/arrow_32.png",
      "48": "icons/arrow_64.png",
      "128": "icons/arrow_128.png"
    }
  },
  "permissions": [
    "scripting", 
    "activeTab",
    "contentSettings"
  ]
}


